@model FinalProject.Models.GalleryItem

@{
    ViewData["Title"] = "Create";
}
    <div class="pl-4">
        <h1>Create</h1>

        <h4>GalleryItem</h4>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Create" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group" style="visibility:hidden">
                        <label asp-for="GalleryId" class="control-label"></label>
                        <select asp-for="GalleryId" class="form-control" asp-items="ViewBag.GalleryId"></select>
                    </div>
                    <div class="form-group">
                        <label asp-for="Photo" class="control-label"></label>
                        <input asp-for="PhotoFile" data-validation="mime size" data-validation-allowing="jpg, png,jpeg" data-validation-max-size="4Mb"   type="file" class="form-control" />
                        <span asp-validation-for="Photo" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PhotoSm" class="control-label"></label>
                        <input asp-for="PhotoSmFile" type="file" data-validation="mime size" data-validation-allowing="jpg, png,jpeg" data-validation-max-size="4Mb"  class="form-control" />
                        <span asp-validation-for="PhotoSm" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-action="Index" asp-controller="Galleries">Back to List</a>
        </div>
        </div>

