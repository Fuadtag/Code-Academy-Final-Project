@model Gallery

@{
    ViewData["Title"] = "Index";
}
    <div class="pl-4">
        <h1>Index</h1>

        <p>
            <a class="btn btn-primary" asp-action="Create" asp-controller="GalleryItems">Create New</a>
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.GalleryItems)
                {
                    <tr>
                        <td>
                            <img style="object-fit:contain" height="200" width="200" src="~/Uploads/@item.Photo" />
                        </td>
                        
                        <td style="vertical-align:middle">
                            <a asp-action="Edit" asp-controller="GalleryItems" asp-route-id="@item.Id"><i class="fas fa-edit"></i></a>
                            <a asp-action="Detail" asp-controller="GalleryItems" asp-route-id="@item.Id"><i class="fas fa-info-circle"></i></a>
                            <a asp-action="Delete" asp-controller="GalleryItems" asp-route-id="@item.Id"><i class="fas fa-trash"></i></a>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>