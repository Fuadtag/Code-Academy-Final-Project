@model IEnumerable<FinalProject.Models.Setting>

@{
    ViewData["Title"] = "Index";
}
    <div class="pl-4 pr-4">
        <h1>Index</h1>

        <p>
            <a asp-action="Create" class="btn btn-primary">Create New</a>
        </p>
        <table class="table table_id">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.FacebookLink)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TwitterLink)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.InstagramLink)
                    </th>
                    
                    <th>
                        @Html.DisplayNameFor(model => model.Phone)
                    </th>
                    
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    
                    <th>
                        @Html.DisplayNameFor(model => model.MainAdress)
                    </th>
                    
                    <th>
                        @Html.DisplayNameFor(model => model.Logo)
                    </th>
                    
                    
                    <th>
                        @Html.DisplayNameFor(model => model.Payment)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.FacebookLink)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TwitterLink)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.InstagramLink)
                        </td>
                        
                        <td>
                            @Html.DisplayFor(modelItem => item.Phone)
                        </td>
                        
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        
                        <td>
                            @Html.DisplayFor(modelItem => item.MainAdress)
                        </td>
                       
                        <td>
                            <img  src="~/Uploads/@item.Logo"/>
                        </td>
                        
                        <td>
                            <img src="~/Uploads/@item.Payment"  />
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id"><i class="fas fa-edit"></i></a> 
                            <a asp-action="Details" asp-route-id="@item.Id"><i class="fas fa-info-circle"></i></a> 
                            <a asp-action="Delete" asp-route-id="@item.Id" class="delete-item"><i class="fas fa-trash"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        </div>