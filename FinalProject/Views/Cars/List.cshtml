@model ICollection<Car>

<!-- Page Title-->
<div class="rn-page-title">
    <div class="rn-pt-overlayer"></div>
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="rn-page-title-inner">
                    <h1>All Cars</h1>
                    <p>Cras eros lorem, rhoncus ac risus sit amet, fringilla ultrices purus.</p>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End Page Title-->
<!-- Cars-->
<section class="rn-section rn-car-list">
    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {
            <div class="col-lg-4 col-md-6">

                <!-- Car Item-->
                <div class="rn-car-item">
                    <div class="rn-car-item-review">
                        <div class="fas fa-star"></div> 5.0
                    </div>
                    <div class="rn-car-item-thumb">
                        <a asp-action="Detail" asp-controller="Cars" asp-route-id="@item.Id">
                            <img class="img-fluid" src="~/Uploads/@item.CartPhoto" alt="@item.Model.CarBrand.Name" />
                        </a>
                    </div>
                    <div class="rn-car-item-info">
                        <h3>
                            <a asp-action="Detail" asp-controller="Cars" asp-route-id="@item.Id">@item.Model.CarBrand.Name @item.Model.Name</a>
                        </h3>
                        <p>@item.Title</p>
                        <div class="rn-car-list-n-price">
                            <ul>
                                <li>Aliqua venandi mutat</li>
                                <li>Plerisque nostrum</li>
                                <li>Intellegimus percurri</li>
                            </ul>
                            <div class="rn-car-price-wrap">
                                <a class="rn-car-price" asp-action="Detail" asp-controller="Cars" asp-route-id="@item.Id">
                                    <span class="rn-car-price-from">From</span>
                                    <span class="rn-car-price-format">
                                        <span class="rn-car-price-amount">$@item.DailyPrice.ToString("#.")</span>
                                        <span class="rn-car-price-per">/day</span>
                                    </span>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
                <!-- End Car Item-->
            }
            

            
            <div class="col-lg-12 d-none d-lg-block">
                <a href="#">
                    <img class="img-fluid mb-50" src="~/images/big-banner.png" alt="banner" srcset="~/images/big-banner.png 1x, ~/images/big-banner@2x.png 2x">
                </a>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">

                <!-- Cars Pagination-->
                <nav class="rn-pagination rn-pagination-center">
                    <ul>
                        @for (int i = 0; i <= (decimal)ViewData["Pagecount"]; i++)
                        {
                            <li>
                                <a class="" asp-action="list" asp-controller="cars" asp-route-p="@(i + 1)">@(i + 1)</a>
                            </li>
                        }
                        
                    </ul>
                </nav>
                <!-- End Cars Pagination-->

            </div>
        </div>
    </div>
</section>
<!-- End Cars-->