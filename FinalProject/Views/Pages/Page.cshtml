@model  PageViewModel


<!-- Page Title-->
<div class="rn-page-title">
    <div class="rn-pt-overlayer"></div>
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="rn-page-title-inner">
                    <h1>Left Sidebar</h1>
                    <p>Cras eros lorem, rhoncus ac risus sit amet, fringilla ultrices purus.</p>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End Page Title-->
<!-- Page Content-->
<div class="rn-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 order-lg-1 pb-15">
                <p>@Model.Page.Text</p>
                
            </div>
            <div class="col-lg-4">

                <!-- Sidebar-->
                <aside class="rn-widget-area rn-left-sidebar" id="secondary">

                    <!-- Widget Item-->
                    <div class="rn-widget">
                        <div class="rn-widget-content">
                            <a href="#">
                                <img class="img-fluid" src="~/images/banner.png" alt="banner" srcset="~/images/banner.png 1x, ~/images/banner@2x.png 2x">
                            </a>
                        </div>
                    </div>
                    <!-- End Widget Item-->
                    <!-- Widget Item-->
                    <section class="rn-widget">
                        <h2 class="rn-widget-title">Categories</h2>
                        <div class="rn-widget-content">
                            <ul>
                                @foreach (var item in Model.Categories)
                                {
                                    <li>
                                        <a href="#">@item.Name</a>
                                    </li>
                                }

                               
                            </ul>
                        </div>
                    </section>
                    <!-- End Widget Item-->
                    <!-- Widget Item-->
                    <section class="rn-widget">
                        <h2 class="rn-widget-title">Recent Posts</h2>
                        <div class="rn-widget-content">
                            <ul class="rn-recent-posts">
                                @foreach (var item in Model.Blogs)
                                {
                                    <li>

                                        <!-- Extra Small Post-->
                                        <div class="rn-recent-post-item">
                                            <div class="rn-recent-post-item-thumb">
                                                <a asp-action="Detail" asp-controller="Blogs" asp-route-id="@item.Id">
                                                    <img class="img-fluid w-100 h-100" width="80" height="80" src="~/images/@item.Photo"/>
                                                </a>
                                            </div>
                                            <div class="rn-recent-post-item-info">
                                                <div class="rn-recent-post-item-meta">
                                                    <span class="rn-recent-post-item-categories">
                                                        In
                                                        <a href="#">@item.Category.Name</a>
                                                    </span>
                                                    <span class="rn-recent-post-item-author">
                                                        At
                                                        <a asp-action="Detail" asp-controller="Blogs" asp-route-id="@item.Id">@item.CreatedAt.ToString("dd MMMM , yyyy")</a>
                                                    </span>
                                                </div>
                                                <div class="rn-recent-post-item-title">
                                                    <h3>
                                                        <a href="#">@item.Title</a>
                                                    </h3>
                                                </div>
                                            </div>
                                        </div>
                                        <!-- End Extra Small Post-->

                                    </li>
                                }

                               
                            </ul>
                        </div>
                    </section>
                    <!-- End Widget Item-->
                    <!-- Widget Item-->
                    <section class="rn-widget">
                        <h2 class="rn-widget-title">Tags</h2>
                        <div class="rn-widget-content">
                            <div class="tags">
                                @foreach (var item in Model.Tags)
                                {
                                    <a href="#">@item.Name</a>

                                }
                                
                            </div>
                        </div>
                    </section>
                    <!-- End Widget Item-->

                </aside>
                <!-- End Slidebar-->

            </div>
        </div>
    </div>
</div>
<!-- End Page Content-->