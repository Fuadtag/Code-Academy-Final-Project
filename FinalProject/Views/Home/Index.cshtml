@model HomeViewModel

@{
    ViewData["Title"] = "Home Page";
}

<!-- Slider-->
<div class="rn-carousel carousel slide" id="carouselExampleControls" data-ride="carousel">
    <div class="carousel-inner">
        
        @for (int n = 0; n < Model.Sliders.Count; n++)
        {
            <div class="carousel-item @(n == 0 ? ("beactive") : "")">
                <div class="carousel-caption">
                    <h2 class="rn-fade-bottom mb-25">@Model.Sliders[n].Title</h2>
                    <p class="rn-fade-bottom rn-caption-item-2 mb-35">@Model.Sliders[n].Text</p>
                    <a class="btn btn-main btn-lg rn-fade-bottom rn-caption-item-3" href="#">Book Now</a>
                </div>
                <div class="rn-slider-overlayer"></div>
                <img class="d-block w-100" src="~/images/@Model.Sliders[n].Photo" alt="slide">
            </div>
        } 
      </div>
    <!-- Slider Controls -->
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="lnr lnr-chevron-left" aria-hidden="true"></span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="lnr lnr-chevron-right" aria-hidden="true"></span>
    </a>
</div>
<!-- End slider-->
